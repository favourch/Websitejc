---
import MainLayout from "@layouts/MainLayout.astro";
---

<MainLayout title="Payment Successful | Wholesalers Advantage" description="Your membership payment was successful.">
  <meta http-equiv="refresh" content="3;url=/membership" />
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 text-center">
        <div class="bg-light rounded-4 p-5">
          <i class="bi bi-check-circle-fill text-success display-1 mb-4"></i>
          <h1 class="display-4 fw-bold mb-4">Payment Successful!</h1>
          <p class="lead mb-4">
            Thank you for becoming a member of Wholesalers Advantage. Your payment has been processed successfully.
          </p>
          <p class="mb-5">
            You will receive a confirmation email shortly with your membership details.
            <br>
            <small class="text-muted">Redirecting to membership page in <span id="countdown">3</span> seconds...</small>
          </p>
          <a href="/" class="btn btn-primary btn-lg">
            Return to Homepage
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Countdown timer
    let seconds = 3;
    const countdownElement = document.getElementById('countdown');
    
    const timer = setInterval(() => {
      seconds--;
      if (countdownElement) {
        countdownElement.textContent = seconds.toString();
      }
      if (seconds <= 0) {
        clearInterval(timer);
        window.location.href = '/membership';
      }
    }, 1000);
  </script>
</MainLayout> 