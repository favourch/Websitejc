---
import MainLayout from "@layouts/MainLayout.astro";
---

<MainLayout title="Payment Failed | Wholesalers Advantage" description="Your membership payment was not successful.">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 text-center">
        <div class="bg-light rounded-4 p-5">
          <i class="bi bi-x-circle-fill text-danger display-1 mb-4"></i>
          <h1 class="display-4 fw-bold mb-4">Payment Failed</h1>
          <p class="lead mb-4">
            We're sorry, but your payment could not be processed at this time.
          </p>
          <p class="mb-5">
            Please try again or contact our support team if you continue to experience issues.
          </p>
          <div class="d-flex gap-3 justify-content-center">
            <a href="/membership#membership-tiers" class="btn btn-primary btn-lg">
              Try Again
            </a>
            <a href="/contact" class="btn btn-outline-primary btn-lg">
              Contact Support
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout> 