---
import { pages } from "@core/pages";

const { backgroundColor } = Astro.props;
---

<section id="hero">
  <div class="background section">
    <div class="container d-flex justify-content-center align-items-center">
      <div class="hero-content d-flex flex-column flex-grow-1">
        <h1 class="title mb-4 text-center mx-auto">
          Advancing the Evolution of Wholesale Distribution Services
        </h1>
        <div class="subtitle fs-4 lh-lg text-center mb-5 mx-auto">
          <p>
            Wholesalers Advantage is committed to delivering innovative direct and B2B 
            solutions, seamlessly integrating Insurtech advancements, comprehensive 
            insurance offerings, and strategic financial programs.
          </p>
          
          <p>
            Our wholesaler program is meticulously designed to support large-scale distribution 
            organizations, providing premier contracts, industry-leading compensation structures, and
            exceptional marketing support to amplify brand visibility and drive market 
            success.
          </p>
          
          <p>
            By fostering strategic partnerships and offering unparalleled resources, 
            we ensure our clients achieve both operational excellence and sustained growth.
          </p>
        </div>
        <div class="mx-auto">
          <a
            class="btn btn-primary btn-lg rounded-pill fs-4 fs-sm-3 fw-bold text-white py-2 px-4"
            href={pages.membership.path}
          >
            <span class="px-4">Become a Member</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style define:vars={{ backgroundColor }}>
  .shield-logo {
    object-fit: contain;
  }

  .background {
    background-color: var(--backgroundColor);
    position: relative;
    padding-inline: 10rem;
  }

  .background::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/images/heroback1.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 1;
    z-index: 0;
  }

  .background::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    color: #fff;
  }

  h1 {
    max-width: 800px;
    font-size: 3.5rem;
    color: #fff;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.7);
  }

  @media screen and (max-width: 350px) {
    h1 {
      font-size: 3rem;
    }
  }

  p {
    max-width: 800px;  /* Changed from 700px to 800px to match other sections */
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.7);
  }

  @media screen and (max-width: 991px) {
    .background {
      padding-inline: 2rem;
    }
  }
</style>