---
import { pages } from "@core/pages";

const { backgroundColor } = Astro.props;
---

<section id="hero">
  <div class="background section">
    <div class="container d-flex justify-content-center align-items-center">
      <div class="hero-content d-flex flex-column flex-grow-1">
        <img src="/shield-logo.webp" alt="Shield Logo" class="shield-logo mx-auto mb-4" width="120" height="120">
        <h1 class="title mb-4 text-center mx-auto">
          The next generation of wholesale distribution services
        </h1>
        <p
          class="subtitle fs-4 lh-lg text-body-secondary text-center mb-5 mx-auto"
        >
          Wholesalers Advantage offers a diverse array of direct, and B2B
          solutions, Insurtech innovation, insurance, and our “Tax Wallet” the
          latest in AI driven tax services
        </p>
        <div class="mx-auto">
          <a
            class="btn btn-primary btn-lg rounded-pill fs-4 fs-sm-3 fw-bold text-white py-2 px-4"
            href={pages.memberForm.path}
          >
            <span class="px-4">Become a Member</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style define:vars={{ backgroundColor }}>
  .shield-logo {
    object-fit: contain;
  }

  .background {
    background-color: var(--backgroundColor);
  }

  h1 {
    max-width: 800px;
    font-size: 3.5rem;
  }

  @media screen and (max-width: 350px) {
    h1 {
      font-size: 3rem;
    }
  }

  p {
    max-width: 700px;
  }
</style>
